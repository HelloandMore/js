<div class="row mb-4">
    <div class="col-md-6">
        <h2>Vevők listája</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="/customers/create" class="btn btn-primary">Új vevő létrehozása</a>
    </div>
</div>

<% if (customers && customers.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Név</th>
                    <th>Cím</th>
                    <th>Adószám</th>
                    <th>Műveletek</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach(customer => { %>
                    <tr>
                        <td><%= customer.name %></td>
                        <td><%= customer.address %></td>
                        <td><%= customer.tax_number %></td>                        <td>
                            <a href="/customers/view/<%= customer.id %>" class="btn btn-sm btn-info">Megtekintés</a>
                            <a href="/customers/edit/<%= customer.id %>" class="btn btn-sm btn-warning">Szerkesztés</a>
                            <a href="/customers/delete/<%= customer.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Biztosan törölni szeretné ezt a vevőt?')">Törlés</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="alert alert-info">
        Nincs vevő az adatbázisban. <a href="/customers/create">Új vevő létrehozása</a>.
    </div>
<% } %>
