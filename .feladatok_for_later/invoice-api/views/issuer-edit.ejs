<div class="card">
    <div class="card-header">
        <h3>Edit Issuer: <%= issuer.name %></h3>
    </div>
    <div class="card-body">
        <form method="POST" action="/issuers/edit/<%= issuer.id %>">
            <div class="mb-3">
                <label for="name" class="form-label">Issuer Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= issuer.name %>" required>
            </div>
            
            <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="address" value="<%= issuer.address %>" required>
            </div>
            
            <div class="mb-3">
                <label for="tax_number" class="form-label">Tax Number</label>
                <input type="text" class="form-control" id="tax_number" name="tax_number" value="<%= issuer.tax_number %>" required>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Update Issuer</button>
                <a href="/issuers" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
