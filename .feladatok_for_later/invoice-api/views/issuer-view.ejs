<div class="row mb-4">
    <div class="col">
        <a href="/issuers" class="btn btn-secondary mb-3">Back to Issuers</a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-info text-white">
        <h3>Issuer Details</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h4><%= issuer.name %></h4>
                <p><strong>Address:</strong> <%= issuer.address %></p>
                <p><strong>Tax Number:</strong> <%= issuer.tax_number %></p>
                <div class="mt-3">
                    <a href="/issuers/edit/<%= issuer.id %>" class="btn btn-warning">Edit</a>
                    <a href="/issuers/delete/<%= issuer.id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this issuer?')">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>Issuer's Invoices</h4>
    </div>
    <div class="card-body">
        <% if (invoices && invoices.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Invoice Number</th>
                            <th>Issue Date</th>
                            <th>Due Date</th>
                            <th>Customer</th>
                            <th>Total Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% invoices.forEach(invoice => { %>
                            <tr>
                                <td><%= invoice.invoice_number %></td>
                                <td><%= invoice.issue_date %></td>
                                <td><%= invoice.due_date %></td>
                                <td><%= invoice.customer_name %></td>
                                <td><%= invoice.total_amount.toLocaleString() %> Ft</td>
                                <td>
                                    <a href="/view/<%= invoice.id %>" class="btn btn-sm btn-info">View</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                No invoices found for this issuer. <a href="/create">Create a new invoice</a>.
            </div>
        <% } %>
    </div>
</div>
