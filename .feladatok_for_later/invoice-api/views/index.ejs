<div class="row mb-4">
    <div class="col-md-6">
        <h2>Számla lista</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="/create" class="btn btn-primary">Új számla létrehozása</a>
    </div>
</div>

<% if (invoices && invoices.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Számla szám</th>
                    <th>Kiállítás dátuma</th>
                    <th>Fizetési határidő</th>
                    <th>Kiállító</th>
                    <th>Vevő</th>
                    <th>Végösszeg</th>
                    <th>ÁFA</th>
                    <th>Műveletek</th>
                </tr>
            </thead>
            <tbody>
                <% invoices.forEach(invoice => { %>
                    <tr>
                        <td><%= invoice.invoice_number %></td>
                        <td><%= invoice.issue_date %></td>
                        <td><%= invoice.due_date %></td>
                        <td><%= invoice.issuer_name %></td>
                        <td><%= invoice.customer_name %></td>
                        <td><%= invoice.total_amount.toLocaleString() %> Ft</td>
                        <td><%= (invoice.vat_rate * 100).toFixed(0) %>% (<%= invoice.vat_amount.toLocaleString() %> Ft)</td>                        <td>
                            <a href="/view/<%= invoice.id %>" class="btn btn-sm btn-info">Megtekintés</a>
                            <a href="/edit/<%= invoice.id %>" class="btn btn-sm btn-warning">Szerkesztés</a>
                            <a href="/delete/<%= invoice.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Biztosan törölni szeretné ezt a számlát?')">Törlés</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="alert alert-info">
        Nincsenek számlák. <a href="/create">Hozzon létre egy új számlát</a>.
    </div>
<% } %>
